<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <!-- Required to request location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Terra"
        tools:targetApi="31" >
        <activity
            android:name=".AuthoritySearchScreen"
            android:exported="false" />
        <activity
            android:name=".AuthorityLoginScreen"
            android:exported="false" />
        <activity
            android:name=".UserLoginScreen"
            android:exported="false" />
        <activity
            android:name=".AddFriendScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".SearchScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".ProfileScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".ContactScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".HomeScreenGov"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".services.UpdatePostScreen"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewPostActivity"
            android:label="New Post"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PostThreadActivity"
            android:label="Thread"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PostThreadActivityGov"
            android:label="Thread"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>