<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_friend_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFriendScreen" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="192dp">

        <ScrollView
            android:layout_width="721dp"
            android:layout_height="330dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.971">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/or_header"
                    android:layout_width="92dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginEnd="312dp"
                    android:fontFamily="@font/montserrat_black"
                    android:text="OR"
                    android:textSize="48sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/user_id_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="404dp"
                    android:background="#779A9691"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="UserID"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_wrapBehaviorInParent="included" />

                <TextView
                    android:id="@+id/user_id_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="360dp"
                    android:layout_marginEnd="616dp"
                    android:fontFamily="@font/montserrat_black"
                    android:text="UserID:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/contact_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="172dp"
                    android:background="#779A9691"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="Contact"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_wrapBehaviorInParent="included" />

                <TextView
                    android:id="@+id/add_friend_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00E8841A"
                    android:fontFamily="@font/montserrat_black"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="false"
                    android:shadowColor="#632626"
                    android:text="Add Friend"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />

                <TextView
                    android:id="@+id/contact_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_black"
                    android:text="Contact:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.228" />

                <Button
                    android:id="@+id/copy_link_button"
                    android:layout_width="192dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="496dp"
                    android:layout_marginEnd="464dp"
                    android:background="@drawable/round_button"
                    android:fontFamily="@font/montserrat_black"
                    android:text="Copy Link"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/add_contact_button"
                    android:layout_width="113dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="584dp"
                    android:layout_marginEnd="288dp"
                    android:background="@drawable/round_button"
                    android:fontFamily="@font/montserrat_black"
                    android:text="ADD"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/add_friend_back_button"
                    android:layout_width="74dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="backButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_arrow_back_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C6C6C6"
        app:itemIconTint="@color/nav_color"
        app:itemTextColor="@color/nav_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>