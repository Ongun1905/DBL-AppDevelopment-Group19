<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/post_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="(Location of Accident)"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="ExtraText" />


            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:padding="10dp"
                    android:text="Username:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_black"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/image_view"
                    android:visibility='gone'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/red_plus_sign" />

            </LinearLayout>



            <TextView
                android:id="@+id/emergency_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:text="Emergency Level: "
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/requirements_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:padding="10dp"
                android:text="Requirements: "
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="5"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/verified_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:padding="10dp"
                android:text="Verification by the Government: "
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:padding="10dp"
                android:text="Short description: "
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="10"
                android:ellipsize="end" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>